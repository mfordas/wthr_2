// prettier-ignore
{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "./src",
    "target": "esnext",                                 
    "lib": ["esnext"],
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "app/*": ["./*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
  },
}
